    <reg name="ilink2" bitsize="32"    group="general" type="code_ptr"/>
    <reg name="blink"  bitsize="32"    group="general" type="code_ptr"/>

    <reg name="r32"   bitsize="32"    group=""/>
    <reg name="r33"   bitsize="32"    group=""/>
