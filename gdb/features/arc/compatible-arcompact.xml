    <reg name="lp_count" bitsize="32" group="general" type="uint32" regnum="60"/>
    <reg name="reserved" bitsize="32" group=""/>
    <reg name="limm"     bitsize="32" group=""/>
    <reg name="pcl"      bitsize="32" group=""        type="code_ptr" regnum="63"/>
  </feature>

  <!-- ARCompact and ARC v2 have different structure of STATUS32, so it is not
  possible to use aux-minimal.xml for ARCompact. -->
  <feature name="org.gnu.gdb.arc.aux-minimal">
    <flags id="status32_type" size="4">
	<field name="H"   start="0" end="0"/>
	<field name="E1"  start="1" end="1"/>
	<field name="E2"  start="2" end="2"/>
	<field name="A1"  start="3" end="3"/>
	<field name="A2"  start="4" end="4"/>
	<field name="AE"  start="5" end="5"/>
	<field name="DE"  start="6" end="6"/>
	<field name="U"   start="7" end="7"/>
	<field name="V"   start="8" end="8"/>
	<field name="C"   start="9" end="9"/>
	<field name="N"   start="10" end="10"/>
	<field name="Z"   start="11" end="11"/>
	<field name="L"   start="12" end="12"/>
	<field name="R"   start="13" end="13"/>
	<field name="SE"  start="14" end="14"/>
    </flags>

    <reg name="pc"       bitsize="32" group="general" regnum="64" type="code_ptr"/>
    <reg name="lp_start" bitsize="32" group="general" regnum="65" type="code_ptr"/>
    <reg name="lp_end"   bitsize="32" group="general" regnum="66" type="code_ptr"/>
    <reg name="status32" bitsize="32" group="general" regnum="67" type="status32_type"/>
  </feature>
  <xi:include href="aux-compatible.xml"/>
